<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
      integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn"
      crossorigin="anonymous"
    />
    <title>Almac√©n</title>
    <link rel="stylesheet" href="/css/normalize.css" />
  </head>
  <body>
    <div class="container-fluid">
      <%- include('./partials/navbar')%>

      <main>
        <section class="section-televisor" id="televisor">
          <h2 class="section-televisor_title mt-3 mb-3 text-center">
            Televisores
          </h2>

          <div class="container">
            <div class="row">
              <% for (let television of televisiones ) { %>
              <div class="col">
                <article class="card" style="width: 18rem">
                  <a href="#">
                    <img src="/images/televisores/<%= television.imagen %>""
                    class="card-img-top" alt="televisor" />
                  </a>
                  <div class="card-body">
                    <h5 class="card-title"><%= television.nombre %></h5>
                    <p class="card-text">Tipo de pantalla: LED</p>
                    <p class="card-text">
                      Precio: $<%= television.precio %>MXN
                    </p>
                  </div>
                </article>
              </div>
              <% } %>
            </div>
          </div>
        </section>

        <section class="section-laptops" id="laptops">
          <h2 class="section-laptops_title mt-3 mb-3 text-center">Laptops</h2>
          <div class="container">
            <div class="row">
              <% for (let laptop of laptops ) { %>
              <div class="col">
                <article class="card" style="width: 18rem">
                  <a href="#">
                    <img src="/images/laptops/<%= laptop.imagen %>""
                    class="card-img-top" alt="televisor" />
                  </a>
                  <div class="card-body">
                    <h5 class="card-title"><%= laptop.nombre %></h5>
                    <p class="card-text">Procesador: Intel</p>
                    <p class="card-text">Precio: $<%= laptop.precio %>MXN</p>
                  </div>
                </article>
              </div>
              <% } %>
            </div>
          </div>
        </section>

        <section class="section-zapatos" id="zapatos">
          <h2 class="section-laptops_title mt-3 mb-3 text-center">Zapatos</h2>
          <div class="container">
            <div class="row">
              <% for (let zapato of zapatos ) { %>
              <div class="col">
                <article class="card" style="width: 18rem">
                  <a href="#">
                    <img src="/images/zapatos/<%= zapato.imagen %>""
                    class="card-img-top" alt="televisor" />
                  </a>
                  <div class="card-body">
                    <h5 class="card-title"><%= zapato.nombre %></h5>
                    <p class="card-text">Material: Piel</p>
                    <p class="card-text">Precio: $<%= zapato.precio %>MXN</p>
                  </div>
                </article>
              </div>
              <% } %>
            </div>
          </div>
        </section>
      </main>
    </div>
  </body>
</html>
